<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewReplyDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/writerNickNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자 닉네임"/>

        <TextView
            android:id="@+id/sideTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(선택 진영)"
            android:layout_marginLeft="5dp"/>



    </LinearLayout>

    <TextView
        android:id="@+id/contextTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용이 나올 자리"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF"
        android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/reReplyList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/contentEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:hint="답글을 입력하세요"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록하기"/>


    </LinearLayout>


</LinearLayout>